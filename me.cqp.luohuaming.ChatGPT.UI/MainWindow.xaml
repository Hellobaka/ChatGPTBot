<Window
    x:Class="me.cqp.luohuaming.ChatGPT.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:me.cqp.luohuaming.ChatGPT.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem
                x:Name="SettingButton"
                Click="SettingButton_Click"
                Header="设置" />
        </Menu>
        <TabControl>
            <TabItem Header="Chat">
                <Grid />
            </TabItem>
            <TabItem Header="TTS">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="TTS 状态：" />
                        <TextBlock
                            x:Name="TTSStatus"
                            VerticalAlignment="Center"
                            Text="Enabled" />
                        <Button
                            x:Name="TTSSwitchStatusButton"
                            Width="60"
                            Margin="10,0,0,0"
                            Click="TTSSwitchStatusButton_Click"
                            Content="切换" />
                        <Button
                            x:Name="TTSReinitButton"
                            Width="60"
                            Margin="10,0,0,0"
                            Click="TTSReinitButton_Click"
                            Content="重新检查" />
                    </StackPanel>
                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                        <TextBlock>测试</TextBlock>
                        <ProgressBar
                            x:Name="TestTTSStatus"
                            Width="100"
                            Margin="10,0,0,0"
                            IsIndeterminate="True"
                            Visibility="Collapsed" />
                    </StackPanel>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TTSInput" />
                        <Button
                            x:Name="TTSTestButton"
                            Grid.Column="1"
                            Width="60"
                            Margin="10,0,0,0"
                            Click="TTSTestButton_Click"
                            Content="生成" />
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
