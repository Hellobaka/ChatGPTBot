<Page
    x:Class="me.cqp.luohuaming.ChatGPT.UI.Pages.TokenStatistics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:me.cqp.luohuaming.ChatGPT.UI"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="850"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <ui:ScrollViewerEx>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  筛选  -->
            <Expander
                Margin="16"
                Header="筛选"
                IsExpanded="True">
                <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">服务商：</TextBlock>
                    <ComboBox />
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">模型：</TextBlock>
                    <ComboBox />
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">用途：</TextBlock>
                    <ComboBox />
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">时间段：</TextBlock>
                    <DatePicker />
                    <TextBlock Margin="5,0" VerticalAlignment="Center">~</TextBlock>
                    <DatePicker />
                    <Button Margin="10,0,0,0">今天</Button>
                    <Button Margin="3,0,0,0">昨天</Button>
                    <Button Margin="3,0,0,0">近7天</Button>
                    <Button Margin="3,0,0,0">近30天</Button>
                    <Button
                        Width="200"
                        Margin="3,0,0,0"
                        HorizontalAlignment="Right">
                        导出
                    </Button>
                </WrapPanel>
            </Expander>
            <!--  数据总览  -->
            <Expander
                Grid.Row="1"
                Margin="16"
                Header="数据总览"
                IsExpanded="True">
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" TextAlignment="Center">调用次数</TextBlock>
                        <TextBlock
                            Margin="0,10,0,0"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            TextAlignment="Center">
                            114
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" TextAlignment="Center">输入Token</TextBlock>
                        <TextBlock
                            Margin="0,10,0,0"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            TextAlignment="Center">
                            114,514
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" TextAlignment="Center">输出Token</TextBlock>
                        <TextBlock
                            Margin="0,10,0,0"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            TextAlignment="Center">
                            1,919,810
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" TextAlignment="Center">总Token</TextBlock>
                        <TextBlock
                            Margin="0,10,0,0"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            TextAlignment="Center">
                            2,034,324
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="4">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" TextAlignment="Center">最大RPM</TextBlock>
                        <TextBlock
                            Margin="0,10,0,0"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            TextAlignment="Center">
                            114
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Expander>
            <!--  图表选项  -->
            <Expander
                Grid.Row="2"
                Margin="16"
                Header="图表选项">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="饼图">
                        <WrapPanel>
                            <CheckBox IsChecked="True">模型</CheckBox>
                            <CheckBox IsChecked="True">用途</CheckBox>
                            <CheckBox IsChecked="True">服务商</CheckBox>
                        </WrapPanel>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="柱状图">
                        <WrapPanel>
                            <RadioButton IsChecked="True">总览</RadioButton>
                            <RadioButton>模型</RadioButton>
                            <RadioButton>用途</RadioButton>
                            <RadioButton>服务商</RadioButton>
                            <RadioButton>无</RadioButton>
                        </WrapPanel>
                    </GroupBox>
                </Grid>
            </Expander>
            <!--  图表  -->
            <Grid Grid.Row="3" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="Column1" Width="*" />
                        <ColumnDefinition x:Name="Column2" Width="*" />
                        <ColumnDefinition x:Name="Column3" Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Margin="10,0" Header="模型占比">
                        <lvc:PieChart
                            MinWidth="100"
                            MinHeight="300"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Series="{Binding Pie_ModelCollection}" />
                    </GroupBox>
                    <GroupBox
                        Grid.Column="1"
                        Margin="10,0"
                        Header="用途占比"
                        Visibility="Visible">
                        <lvc:PieChart
                            MinWidth="100"
                            MinHeight="300"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Series="{Binding Pie_ModelCollection}" />
                    </GroupBox>
                    <GroupBox
                        Grid.Column="2"
                        Margin="10,0"
                        Header="服务商占比">
                        <lvc:PieChart
                            MinWidth="100"
                            MinHeight="300"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Series="{Binding Pie_ModelCollection}" />
                    </GroupBox>
                </Grid>
                <GroupBox
                    Grid.Row="1"
                    Margin="10,0"
                    Header="时段详细">
                    <lvc:CartesianChart MinHeight="200" LegendPosition="Right" />
                </GroupBox>
            </Grid>
        </Grid>
    </ui:ScrollViewerEx>
</Page>
