<Page
    x:Class="me.cqp.luohuaming.ChatGPT.UI.Pages.Relationship"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:me.cqp.luohuaming.ChatGPT.UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Relationship"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Header="总览">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel x:Name="GroupsContainer" />
                        <TextBlock
                            x:Name="EmptyHint"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="空空如也~" />
                    </Grid>
                </ScrollViewer>
                <Button
                    x:Name="ReloadButton"
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Stretch"
                    Click="ReloadButton_Click"
                    Content="刷新"
                    Style="{StaticResource AccentButtonStyle}" />
            </Grid>
        </GroupBox>
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock
                x:Name="SelectRelationshipDescription"
                Text="当前关系为："
                TextWrapping="Wrap" />
            <GroupBox Margin="0,5" Header="编辑关系值 (-1000~1000)">
                <TextBox x:Name="SelectRelationshipValue" />
            </GroupBox>
            <Button
                x:Name="EditSelectButton"
                HorizontalAlignment="Stretch"
                Click="EditSelectButton_Click"
                Content="修改"
                Style="{StaticResource AccentButtonStyle}" />
            <Button
                x:Name="DeleteSelectButton"
                Margin="0,10"
                HorizontalAlignment="Stretch"
                Click="DeleteSelectButton_Click"
                Content="删除"
                Style="{StaticResource ErrorButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
