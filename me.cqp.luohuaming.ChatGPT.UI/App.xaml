<Application
    x:Class="me.cqp.luohuaming.ChatGPT.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:me.cqp.luohuaming.ChatGPT.UI"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            <Style
                x:Key="ErrorButtonStyle"
                BasedOn="{StaticResource DefaultButtonStyle}"
                TargetType="Button">
                <Style.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="#E81123" />
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FFB3B3" />
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#F1707B" />
                </Style.Resources>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
